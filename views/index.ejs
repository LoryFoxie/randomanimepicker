<%- include("partials/header.ejs") %>

<br><img src="images/logo.png" alt="random anime" />
<h1>Random Anime Picker</h1>

<div class="main">

    <h2>
        <%= title %>
        &nbsp;/&nbsp;
        <%= title_english %>
    </h2> 

    <br><img src="
    <%= image %>
    " />

    <div class="synopsis_space"> 
        <%= synopsis %>
    </div>

    <br>

    <h3>Rating:</h3>
        <p>
            <%= rating %>
        </p>
        
    <h3>Status:</h3>
        <p>
             <%= status %>
        </p>

    <h3>URL:</h3> 
        <p><a href="
            <%= anime %>
        ">click me!</a></p>

</div> 

<div class="refresh-space">
    <form method="get">
        <button name="home" value="new" class="refresh-btn">Refresh</button>
    </form>
</div>

<%- include("partials/footer.ejs") %>